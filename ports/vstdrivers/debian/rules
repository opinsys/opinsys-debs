#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh  $@

override_dh_shlibdeps:

override_dh_strip:

SRC_VERSION := $(shell dpkg-parsechangelog | sed -ne 's/^Version: \(\([0-9]\+\):\)\?\(.*\)-.*/\3/p')
get-orig-source:
	mkdir ../vstdrivers-$(SRC_VERSION)
	wget http://www.vernier.com/files/downloads/LPL_3845_B2_32.tgz -O ../LPL_3845_B2_32.tgz
	tar -z -x -f ../LPL_3845_B2_32.tgz -C ../
	dpkg -x ../vstdrivers_$(SRC_VERSION)_i386.deb ../vstdrivers-$(SRC_VERSION)
	tar -z -c -f ../vstdrivers_$(SRC_VERSION).orig.tar.gz ../vstdrivers-$(SRC_VERSION)
	rm -rf ../vstdrivers-$(SRC_VERSION)
	tar -z -x -f ../vstdrivers_$(SRC_VERSION).orig.tar.gz --strip-components=1 -C .
