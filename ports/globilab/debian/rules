#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh  $@

override_dh_shlibdeps:

override_dh_strip:

override_dh_usrlocal:

SRC_VERSION := $(shell dpkg-parsechangelog | sed -ne 's/^Version: \(\([0-9]\+\):\)\?\(.*\)-.*/\3/p')
UPSTREAM_DEB=GlobiLab-$(SRC_VERSION).deb
URL=http://www.globisens.net/sites/default/files/docs/support/$(UPSTREAM_DEB)

get-orig-source:
	wget $(URL) -O ../$(UPSTREAM_DEB)
	mkdir -p ../globilab-$(SRC_VERSION)
	dpkg -x ../$(UPSTREAM_DEB) ../globilab-$(SRC_VERSION)
	tar -C .. -zcf ../globilab_$(SRC_VERSION).orig.tar.gz globilab-$(SRC_VERSION)
	rm -rf ../globilab-$(SRC_VERSION)
	tar -zxf ../globilab_$(SRC_VERSION).orig.tar.gz --strip-components=1 -C .
