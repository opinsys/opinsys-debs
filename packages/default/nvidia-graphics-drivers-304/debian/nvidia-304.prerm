PACKAGE_NAME=nvidia-304
CVERSION=`dpkg-query -W -f='${Version}' $PACKAGE_NAME | awk -F "-" '{print $1}' | cut -d\: -f2`
CVERSION=${CVERSION#*really.}

remove_dkms_module() {
	echo "Removing all DKMS Modules"
	dkms remove -m $PACKAGE_NAME -v $CVERSION --all > /dev/null
	echo "Done."
}

case "$1" in
	upgrade)
		remove_dkms_module 
	;;
	remove)
		remove_dkms_module 
	
		update-alternatives --remove x86_64-linux-gnu_gl_conf /usr/lib/nvidia-304/ld.so.conf
		update-alternatives --remove i386-linux-gnu_gl_conf /usr/lib/nvidia-304/alt_ld.so.conf
		update-alternatives --remove glamor_conf /usr/share/nvidia-304/glamor.conf

		# explicit ldconfig due to alternatives
		ldconfig

		# Update the grub gfxpayload blacklist
		if which update-grub-gfxpayload >/dev/null 2>&1; then
		    update-grub-gfxpayload
		fi

                # Remove any quirks for the driver
                if [ `which quirks-handler` ]; then
                    quirks-handler -d $PACKAGE_NAME -v
                fi
	;;
esac

#DEBHELPER#
