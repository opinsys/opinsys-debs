#!/usr/bin/make -f


%:
	dh  $@

PACKAGE = $(shell dpkg-parsechangelog | sed -ne 's/^Source: //p')
SRC_VERSION := $(shell dpkg-parsechangelog | sed -ne 's/^Version: \(\([0-9]\+\):\)\?\(.*\)-.*/\3/p')

INSTALL_DIR = $(CURDIR)/fluentd/usr/lib/fluentd-gem

get-orig-source:
	mkdir -p $(CURDIR)/fluentd/etc/fluent/conf.d
	mkdir -p $(INSTALL_DIR)
	GEM_HOME=$(INSTALL_DIR) gem2.1 install --version $(SRC_VERSION) $(PACKAGE)
	tar -C .. -zcf ../fluentd_$(SRC_VERSION).orig.tar.gz fluentd/fluentd
